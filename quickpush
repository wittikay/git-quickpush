#!/bin/bash

# QuickPush v1.0 - A streamlined git workflow tool
# Author: Wittikay
# Repository: https://github.com/wittikay/git-quickpush
#
# Quick Git Push - Global Tool
# Usage: quickpush
# Description: Streamlined git add, commit, and push workflow

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}âŒ Error: Not a git repository${NC}"
    echo "Please run this command from within a git repository."
    exit 1
fi

# Check if there are any changes to commit
if git diff --quiet && git diff --staged --quiet; then
    echo -e "${YELLOW}âš ï¸  No changes detected${NC}"
    echo "Working directory is clean. Nothing to commit."
    exit 0
fi

# Show current status
echo -e "${BLUE}ğŸ“‹ Current git status:${NC}"
git status --short

echo ""
echo -e "${BLUE}ğŸ’¬ Enter commit message:${NC}"
read -r commit_message

# Validate commit message
if [ -z "$commit_message" ]; then
    echo -e "${RED}âŒ Error: Commit message cannot be empty${NC}"
    exit 1
fi

# Confirm before proceeding
echo ""
echo -e "${YELLOW}ğŸ”„ About to run:${NC}"
echo -e "   ${BLUE}git add -A${NC}"
echo -e "   ${BLUE}git commit -m \"$commit_message\"${NC}"
echo -e "   ${BLUE}git push${NC}"
echo ""
echo -e "${YELLOW}Continue? (y/N):${NC}"
read -r confirm

if [[ ! "$confirm" =~ ^[Yy]$ ]]; then
    echo -e "${YELLOW}â¹ï¸  Operation cancelled${NC}"
    exit 0
fi

# Execute the git commands
echo -e "${BLUE}ğŸ“ Staging all changes...${NC}"
if ! git add -A; then
    echo -e "${RED}âŒ Failed to stage changes${NC}"
    exit 1
fi

echo -e "${BLUE}ğŸ’¾ Committing changes...${NC}"
if ! git commit -m "$commit_message"; then
    echo -e "${RED}âŒ Failed to commit changes${NC}"
    exit 1
fi

echo -e "${BLUE}ğŸš€ Pushing to remote...${NC}"
if ! git push; then
    echo -e "${RED}âŒ Failed to push changes${NC}"
    echo -e "${YELLOW}ğŸ’¡ Tip: You may need to set upstream with: git push --set-upstream origin <branch-name>${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Successfully pushed to repository!${NC}"
echo -e "${GREEN}ğŸ‰ Commit: \"$commit_message\"${NC}"